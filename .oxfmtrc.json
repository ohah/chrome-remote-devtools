{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "ignorePatterns": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/*.lock",
    "**/target/**",
    "**/*.pdb",
    "reference/**",
    "devtools/**",
    "packages/inspector/dist/**",
    "packages/inspector/devtools/bundled/**",
    "packages/inspector/src-tauri/**",
    "devtools/devtools-frontend/**"
  ]
}

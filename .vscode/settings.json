{
  // Editor settings / 에디터 설정
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.encoding": "utf8",

  // Format on save / 저장 시 포맷팅
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "oxc.oxc-vscode",

  // Language-specific formatters / 언어별 포맷터
  "[typescript]": {
    "editor.defaultFormatter": "oxc.oxc-vscode",
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "oxc.oxc-vscode",
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.defaultFormatter": "oxc.oxc-vscode",
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "oxc.oxc-vscode",
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.defaultFormatter": "oxc.oxc-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "oxc.oxc-vscode",
    "editor.tabSize": 2
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.tabSize": 4,
    "editor.formatOnSave": true
  },

  // TypeScript settings / TypeScript 설정
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,

  // File associations / 파일 연결
  "files.associations": {
    "*.toml": "toml"
  },

  // Show files excluded by .gitignore in explorer / 탐색기에서 .gitignore로 제외된 파일도 표시
  "explorer.excludeGitIgnore": false,

  // Rust Analyzer settings / Rust Analyzer 설정
  "rust-analyzer.cargo.buildScripts.useRustcWrapper": true,
  "rust-analyzer.cargo.allFeatures": true,

  // Check on save settings / 저장 시 검사 설정
  "rust-analyzer.checkOnSave": true,
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.checkOnSave.allTargets": true,

  // Workspace root / 워크스페이스 루트
  "rust-analyzer.linkedProjects": ["Cargo.toml"],
  // Files to exclude from rust-analyzer / rust-analyzer에서 제외할 파일
  "rust-analyzer.files.excludeDirs": [
    "**/node_modules",
    "**/target",
    "**/dist",
    "**/doc_build",
    "**/reference",
    "**/devtools/devtools-frontend"
  ]
}

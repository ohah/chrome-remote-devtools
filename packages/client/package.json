{
  "name": "@ohah/chrome-remote-devtools-client",
  "version": "0.1.0-rc.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/ohah/chrome-remote-devtools.git"
  },
  "files": [
    "dist",
    "README.md",
    "src"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "browser": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./iife": "./dist/index.global.js"
  },
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bunup && bun run scripts/add-ignore-list-to-sourcemaps.ts",
    "build:esm": "bunup --format esm && bun run scripts/add-ignore-list-to-sourcemaps.ts",
    "build:iife": "bunup --format iife && bun run scripts/add-ignore-list-to-sourcemaps.ts",
    "build:watch": "bunup --watch",
    "build:esm:watch": "bunup --format esm --watch",
    "build:iife:watch": "bunup --format iife --watch",
    "prepublishOnly": "bun run build",
    "clean": "rm -rf dist",
    "test": "bun test"
  },
  "dependencies": {
    "@babel/runtime": "^7.25.0",
    "@ohah/chrome-remote-devtools-client-rrweb": "workspace:*",
    "@rrweb/types": "^2.0.0-alpha.18"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bunup": "0.16.20",
    "fake-indexeddb": "^6.2.5",
    "typescript": "^5.0.0"
  }
}
